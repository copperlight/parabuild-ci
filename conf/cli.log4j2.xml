<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="stdout" target="SYSTEM_OUT">
      <PatternLayout pattern="[%t] %d{ABSOLUTE} %5p: %-30.30c{3}(%3L) - %m %n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="org.apache" level="debug"/>
    <Logger name="org.apache.axis" level="debug"/>
    <Logger name="org.apache.axis.i18n.ProjectResourceBundle" level="debug"/>
    <Logger name="org.parabuild.ci" level="debug"/>
    <Root level="debug">
      <AppenderRef ref="stdout"/>
    </Root>
  </Loggers>
</Configuration>
