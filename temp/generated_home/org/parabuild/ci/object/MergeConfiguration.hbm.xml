<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 1.1//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.parabuild.ci.object.MergeConfiguration"
        table="MERGE_CONFIGURATION"
        polymorphism="explicit"
    >
        <cache usage="read-write" />

        <id
            name="ID"
            column="ID"
            type="int"
            unsaved-value="-1"
        >
            <generator class="identity">
            </generator>
        </id>

        <discriminator
            column="DISCRIMINATOR"
            type="string"
        />

        <version
            name="timeStamp"
            type="long"
            column="TIMESTAMP"
        />

        <property
            name="activeMergeID"
            type="int"
            column="ACTIVE_MERGE_CONFIGURATION_ID"
            unique="false"
        />

        <property
            name="sourceBuildID"
            type="int"
            column="SOURCE_BUILD_ID"
            unique="false"
        />

        <property
            name="targetBuildID"
            type="int"
            column="TARGET_BUILD_ID"
            unique="false"
        />

        <property
            name="name"
            type="java.lang.String"
            column="NAME"
            unique="true"
        />

        <property
            name="description"
            type="java.lang.String"
            column="DESCRIPTION"
            unique="false"
        />

        <property
            name="marker"
            type="java.lang.String"
            column="MARKER"
            unique="false"
        />

        <property
            name="mergeMode"
            type="byte"
            column="MERGE_MODE"
            unique="false"
        />

        <property
            name="conflictResolutionMode"
            type="byte"
            column="CONFLICT_RESOLUTION_MODE"
            unique="false"
        />

        <property
            name="branchViewSource"
            type="byte"
            column="BRANCH_VIEW_SOURCE"
            unique="false"
        />

        <property
            name="branchViewName"
            type="java.lang.String"
            column="BRANCH_VIEW_NAME"
            unique="false"
        />

        <property
            name="branchView"
            type="java.lang.String"
            column="BRANCH_VIEW"
            unique="false"
        />

        <property
            name="reverseBranchView"
            type="yes_no"
            column="REVERSE_BRANCH_VIEW"
            unique="false"
        />

        <property
            name="indirectMerge"
            type="yes_no"
            column="INDIRECT_MERGE"
            unique="false"
        />

        <property
            name="preserveMarker"
            type="yes_no"
            column="PRESERVE_MARKER"
            unique="false"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-MergeConfiguration.xml
            containing the additional properties and place it in your merge dir.
        -->
        <subclass
            name="org.parabuild.ci.object.ActiveMergeConfiguration"
            discriminator-value="A"
        >
	    <!--
            	To add non XDoclet property mappings, create a file named
                hibernate-properties-ActiveMergeConfiguration.xml
		containing the additional properties and place it in your merge dir.
	    -->

        </subclass>
        <subclass
            name="org.parabuild.ci.object.BranchMergeConfiguration"
            discriminator-value="R"
        >
	    <!--
            	To add non XDoclet property mappings, create a file named
                hibernate-properties-BranchMergeConfiguration.xml
		containing the additional properties and place it in your merge dir.
	    -->

        </subclass>

    </class>

</hibernate-mapping>
