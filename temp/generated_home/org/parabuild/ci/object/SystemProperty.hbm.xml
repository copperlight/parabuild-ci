<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 1.1//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.parabuild.ci.object.SystemProperty"
        table="SYSTEM_PROPERTY"
    >
        <cache usage="read-write" />

        <id
            name="propertyID"
            column="ID"
            type="int"
            unsaved-value="-1"
        >
            <generator class="identity">
            </generator>
        </id>

        <version
            name="propertyTimeStamp"
            type="long"
            column="TIMESTAMP"
        />

        <property
            name="propertyName"
            type="java.lang.String"
            column="NAME"
            unique="true"
        />

        <property
            name="propertyValue"
            type="java.lang.String"
            column="VALUE"
            unique="true"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SystemProperty.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
