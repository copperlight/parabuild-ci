<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 1.1//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.parabuild.ci.object.User"
        table="USERS"
    >
        <cache usage="read-write" />

        <id
            name="userID"
            column="ID"
            type="int"
            unsaved-value="-1"
        >
            <generator class="identity">
            </generator>
        </id>

        <version
            name="timeStamp"
            type="long"
            column="TIMESTAMP"
        />

        <property
            name="name"
            type="java.lang.String"
            column="NAME"
            unique="true"
        />

        <property
            name="fullName"
            type="java.lang.String"
            column="FNAME"
            unique="true"
        />

        <property
            name="admin"
            type="yes_no"
            column="IS_ADMIN"
            unique="false"
        />

        <property
            name="email"
            type="java.lang.String"
            column="EMAIL"
            unique="true"
        />

        <property
            name="password"
            type="java.lang.String"
            column="PASSWORD"
        />

        <property
            name="userRoles"
            type="java.lang.String"
            column="ROLES"
        />

        <property
            name="enabled"
            type="yes_no"
            column="ENABLED"
            unique="false"
        />

        <property
            name="imType"
            type="byte"
            column="IM_TYPE"
            unique="false"
        />

        <property
            name="imAddress"
            type="java.lang.String"
            column="IM_ADDRESS"
            unique="false"
        />

        <property
            name="authenticateUsingLDAP"
            type="yes_no"
            column="LDAP_AUTH"
            unique="false"
        />

        <property
            name="disableAllEmail"
            type="yes_no"
            column="DISABLE_ALL_EMAIL"
            unique="false"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-User.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
